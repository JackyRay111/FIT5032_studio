@model IEnumerable<Assignment.Models.Activity>
<table id="dtable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivityCategory.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityPlace.ActivityPlaceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityType.ActivityTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityCategory.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityPlace.ActivityPlaceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityType.ActivityTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityDescription)
                </td>
                <td>
                    @if (item.ActivityStartDate > DateTime.Now)
                    {
                    <a href="@Url.Action("Book", new { id = item.Id })" class="btn btn-primary">
                        <span>
                            <strong>Book</strong>
                        </span>
                    </a>
                    }
                    else { 
                    <a href="@Url.Action("Book", new { id = item.Id })" class="btn btn-primary disabled">
                        <span>
                            <strong>Book</strong>
                        </span>
                    </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
